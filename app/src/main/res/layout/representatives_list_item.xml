<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="representative"
            type="com.example.android.politicalpreparedness.ui.representative.model.Representative" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_extra_small">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/representative_profile_imageView"
                android:layout_width="@dimen/margin_image_mid"
                android:layout_height="@dimen/margin_image_mid"
                android:layout_marginStart="@dimen/margin_extra_small"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:layout_marginBottom="@dimen/margin_extra_small"
                profileImage="@{representative.official.photoUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/profile_image_content_desc"
                tools:src="@drawable/ic_profile"/>

            <TextView
                android:id="@+id/representative_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@{representative.office.name}"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/representative_profile_imageView"
                app:layout_constraintTop_toTopOf="@+id/representative_profile_imageView"
                tools:text="President of the United States" />

            <TextView
                android:id="@+id/representative_fullName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:layout_marginEnd="@dimen/margin_extra_small"
                android:text="@{representative.official.name}"
                app:layout_constraintEnd_toStartOf="@+id/representative_website"
                app:layout_constraintStart_toStartOf="@+id/representative_title"
                app:layout_constraintTop_toBottomOf="@+id/representative_title"
                tools:text="Donald J. Trump" />

            <TextView
                android:id="@+id/representative_party"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:layout_marginBottom="@dimen/margin_extra_small"
                android:text="@{representative.official.party}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/representative_fullName"
                app:layout_constraintStart_toStartOf="@+id/representative_fullName"
                app:layout_constraintTop_toBottomOf="@+id/representative_fullName"
                tools:text="Republican Party" />

            <ImageView
                android:id="@+id/representative_twitter_profile"
                android:layout_width="@dimen/margin_image_small"
                android:layout_height="@dimen/margin_image_small"
                android:layout_marginEnd="@dimen/margin_extra_small"
                android:layout_marginBottom="@dimen/margin_extra_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/twitter_profile_content_desc"
                app:srcCompat="@drawable/ic_twitter" />

            <ImageView
                android:id="@+id/representative_facebook_profile"
                android:layout_width="@dimen/margin_image_small"
                android:layout_height="@dimen/margin_image_small"
                android:layout_marginEnd="@dimen/margin_extra_small"
                android:layout_marginBottom="@dimen/margin_extra_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/representative_twitter_profile"
                android:contentDescription="@string/facebook_profile_content_desc"
                app:srcCompat="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/representative_website"
                android:layout_width="@dimen/margin_image_small"
                android:layout_height="@dimen/margin_image_small"
                android:layout_marginEnd="@dimen/margin_extra_small"
                android:layout_marginBottom="@dimen/margin_extra_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/representative_facebook_profile"
                android:contentDescription="@string/website_url_content_desc"
                app:srcCompat="@drawable/ic_www" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>